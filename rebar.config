%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et
%% This is a sample rebar.conf file that shows examples of some of rebar's
%% options.

%% == Core ==
{require_otp_vsn, "R15B|17"}.

%% Additional library directories to add to the code path
{lib_dirs, ["deps"]}.

{pre_hooks, []}.

%% == Erlang Compiler ==

%% Erlang files to compile before the rest. Rebar automatically compiles
%% parse_transforms and custom behaviours before anything other than the files
%% in this list.
{erl_first_files, []}.

%% Erlang compiler options
{erl_opts, [debug_info
            ,{i, "include"}
            ,{src_dirs, []}]}.

{eunit_opts, [verbose,{eunit_surefire, [{dir, "."}]}]}. 

{cover_enabled, true}.

%% == Depends
{deps, [{mochiweb, "2.12.*", {git, "git://github.com/mochi/mochiweb.git", {branch, "master"}}},
        {emysql, "0.4.*", {git, "git://github.com/Eonblast/Emysql.git", {branch, "master"}}},
        {protobuffs, "0.8.*", {git, "git://github.com/basho/erlang_protobuffs.git", {tag, "protobuffs-0.6.0"}}}]}.


%% == Subdirectories ==

%% Subdirectories
{sub_dirs, ["apps/gateway"
            ,"apps/scene"
            ,"apps/world"
            ,"apps/player_app"
            ,"rel"]}.

